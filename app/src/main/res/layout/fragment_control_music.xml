<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    android:id="@+id/layout_control_music"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_background_3"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageDiscMini"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_disk"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/layout_textView"
            />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/imageDiscMini"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/layout_control"
            >
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/textViewNameSongMini"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:text="Ten Bai Hat"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewNameArtistMini"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/textViewNameArtistMini"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:gravity="top"
                android:text="Ten Nghe Si"
                app:layout_constraintTop_toBottomOf="@id/textViewNameSongMini"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_control"
            android:layout_width="165dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@+id/layout_textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            >
            <ImageButton
                android:id="@+id/buttonPreviousMiNi"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/buttonPlayMini"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_previous_black_24dp"
                tools:ignore="VectorDrawableCompat"
                />
            <ImageButton
                android:id="@+id/buttonPlayMini"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonPreviousMiNi"
                app:layout_constraintRight_toLeftOf="@+id/buttonNextMini"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_pause_black_24dp"
                tools:ignore="VectorDrawableCompat"
                />
            <ImageButton
                android:id="@+id/buttonNextMini"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonPlayMini"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_next_black_24dp"
                tools:ignore="VectorDrawableCompat"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>